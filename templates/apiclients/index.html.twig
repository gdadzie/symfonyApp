{% extends ea.templatePath('layout') %}

{% block title %}Apiclients index{% endblock %}

  {% block stylesheets %}
      <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
      <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet">
      {{ encore_entry_link_tags('app') }}
  {% endblock %}



{% block body %}
    <h1 class="">Apiclients index</h1>

    <div class="container">
        <div class="row">
            <div class="col-6"> <label>Client_name</label><input type="search"></div>
            <div class="col-6"> <label>Client_id</label><input type="search"></div>
            <div class="col-3"><button type="button" class="btn btn-info w-25 ">actif</button></div>
            <div class="col-3"><button type="button" class="btn btn-info w-25 ">Inactif</button></div>
        </div>
        <div class="row">
            <div class="col-6">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Id</th>
                        <th>ClientId</th>
                        <th>ClientSecret</th>
                        <th>ClientName</th>
                        <th>Active</th>
                        <th>ShortDescription</th>
                        <th>FullDescription</th>
                        <th>Logo_url</th>
                        <th>Url</th>
                        <th>Dpo</th>
                        <th>Technical_contact</th>
                        <th>Commercial_contact</th>
                        <th>actions</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for apiclient in apiclients %}
                        <tr>
                            <td>{{ apiclient.id }}</td>
                            <td>{{ apiclient.clientId }}</td>
                            <td>{{ apiclient.clientSecret }}</td>
                            <td>{{ apiclient.clientName }}</td>
                            <td>{{ apiclient.active ? 'Yes' : 'No' }}</td>
                            <td>{{ apiclient.shortDescription }}</td>
                            <td>{{ apiclient.fullDescription }}</td>
                            <td>{{ apiclient.logoUrl }}</td>
                            <td>{{ apiclient.url }}</td>
                            <td>{{ apiclient.dpo }}</td>
                            <td>{{ apiclient.technicalContact }}</td>
                            <td>{{ apiclient.commercialContact }}</td>
                            <td>
                                <a href="{{ path('app_apiclients_show', {'id': apiclient.id}) }}">show</a>
                                <a href="{{ path('app_apiclients_edit', {'id': apiclient.id}) }}">edit</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="13">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>

        </div>


    </div>

    <a href="{{ path('app_apiclients_new') }}">Create new</a>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>

{% endblock %}
